<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/avenue.jpg"/>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "600*"/>
            <ColumnDefinition Width = "200*"/>
        </Grid.ColumnDefinitions>
        <local:CategoryComponent Margin="5" MaxHeight="340" />
        <local:OrderComponent Grid.Column="1"/>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Bottom" Text = "Welcome to Bleakwind Buffet" Height="36" Width="600" 
                 FontFamily="Bookman Old Style" FontSize="34" Background="{x:Null}" Foreground="#FF1C5F03" FontWeight="Bold" 
                 TextAlignment="Center" Margin="10"  BorderBrush="{x:Null}"   />
    </Grid>



</Window>
